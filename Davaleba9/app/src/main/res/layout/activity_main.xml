<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/s"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="28dp"
            android:layout_marginTop="68dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAll"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_all"
                android:text="All">
            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnParty"
                android:layout_width="116dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_party"
                android:textColor="@color/btn_text_color"
                android:text="Party"
                android:layout_marginStart="10dp">
            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCamping"
                android:layout_width="139dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_party"
                android:textColor="@color/btn_text_color"
                android:text="Camping"
                android:layout_marginStart="10dp">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCategory1"
                android:layout_width="139dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_party"
                android:textColor="@color/btn_text_color"
                android:text="Category1"
                android:layout_marginStart="10dp">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCategory2"
                android:layout_width="139dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_party"
                android:textColor="@color/btn_text_color"
                android:text="Category2"
                android:layout_marginStart="10dp">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCategory3"
                android:layout_width="139dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_party"
                android:textColor="@color/btn_text_color"
                android:text="Category3"
                android:layout_marginStart="10dp">
            </androidx.appcompat.widget.AppCompatButton>





        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>